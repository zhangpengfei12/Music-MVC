<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:minHeight="60dp"
    android:gravity="center_vertical"
    >

    <TextView
        android:layout_marginLeft="8dp"
        android:id="@+id/name"
        android:gravity="bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#141414"
        android:textSize="18sp"
        android:text="越过山丘"/>

    <ImageView
        android:layout_marginLeft="8dp"
        android:layout_below="@+id/name"
        android:id="@+id/icon_tick"
        android:layout_width="26px"
        android:layout_height="26px"
        android:src="@drawable/tick"/>

    <TextView
        android:layout_below="@+id/name"
        android:layout_toRightOf="@+id/icon_tick"
        android:layout_marginLeft="4dp"
        android:id="@+id/size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3.6M"
        android:textColor="@color/music_artist"
        android:textSize="10sp"/>

    <TextView
        android:layout_below="@+id/name"
        android:layout_toRightOf="@+id/size"
        android:layout_marginLeft="4dp"
        android:id="@+id/artis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="杨宗纬"
        android:textColor="@color/music_artist"
        android:textSize="10sp"/>

    <TextView
        android:layout_below="@+id/name"
        android:layout_toRightOf="@+id/artis"
        android:id="@+id/seat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  -  "
        android:textColor="@color/music_artist"
        android:textSize="10sp"/>

    <TextView
        android:layout_below="@+id/name"
        android:layout_toRightOf="@+id/seat"
        android:id="@+id/album"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="十一月的肖邦"
        android:textColor="@color/music_artist"
        android:textSize="10sp"/>

    <ImageView
        android:layout_alignParentRight="true"
        android:layout_width="60px"
        android:layout_height="60px"
        android:src="@drawable/more_h"/>

</RelativeLayout>